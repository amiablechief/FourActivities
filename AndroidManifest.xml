<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seriousplay.fouractivities"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- War of the Worlds Activity -->
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenLayout"
            android:name="com.seriousplay.fouractivities.WotWActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Jabberwocky Activity -->
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenLayout"
            android:name="com.seriousplay.fouractivities.JabberwockyActivity"
            android:label="@string/title_activity_jabberwocky" 
            android:taskAffinity="com.seriousplay.JabberwockyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- U of I at NASA Activity -->
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenLayout"
            android:name="com.seriousplay.fouractivities.UINASAActivity"
            android:label="@string/title_activity_uinasa" 
            android:taskAffinity="com.seriousplay.UINASAActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Roundball Activity -->
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenLayout"
            android:name="com.seriousplay.fouractivities.RoundballActivity"
            android:label="@string/title_activity_roundball" 
            android:taskAffinity="com.seriousplay.RoundballActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>